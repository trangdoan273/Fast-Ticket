@{
    ViewData["Title"] = "Chọn Lịch Chiếu";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/SelectShowtimes.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body>
    <div class="movie-selection">
        <div class="movie-part">

            <div class="movie-head">
                <a href="#" class="movie-image">
                    <img src="@ViewBag.SelectShowtimesInfo.MovieImage" class="movie-img">
                </a>
                <div class="movie-info">
                    <p class="movie-name">@ViewBag.SelectShowtimesInfo.MovieName</p>
                    <p class="movie-description">@ViewBag.SelectShowtimesInfo.Content</p>
                    <div class="movie-detail">
                        <p class="movie-director">Đạo diễn: @ViewBag.SelectShowtimesInfo.Director</p>
                        <p class="movie-actor">Diễn viên: @ViewBag.SelectShowtimesInfo.Actor</p>
                        <p class="movie-type">Thể loại: @ViewBag.SelectShowtimesInfo.Genre</p>
                        <p class="movie-showtimes">Khởi chiếu: @ViewBag.SelectShowtimesInfo.ReleaseDate | Thời lượng:
                            @ViewBag.SelectShowtimesInfo.Duration</p>
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="change-movie-link">
                        <button class="change-movie-btn">Chọn phim khác</button>
                    </a>
                </div>
            </div>
            <div class="date-selection">
                <ul class="date-in-week">
                    @foreach (var date in ViewBag.SelectShowtimesInfo.ShowDates)
                    {
                        <li class="date"><button id="dateClick" class="date-link">@date</button></li>
                    }
                </ul>
            </div>
            <div class="cinema-selection">
                <div class="cinema-info">
                    <p class="cinema-name">Chọn giờ chiếu</p>
                    <div class="time-selection">
                        @foreach (var time in ViewBag.SelectShowtimesInfo.ShowTimes)
                        {
                            <button class="time-btn" id="timeClick">@time</button>
                        }
                    </div>
                </div>
            </div>
            <div class="select-seat">
                <p class="select-seat-label">Chọn ghế</p>
                <p class="screen">MÀN HÌNH</p>
                <div class="seat-wrapper">
                    @foreach (var seat in ViewBag.SelectShowtimesInfo.Seat)
                    {
                            <button class="seat" id="seatClick">@seat</button>
                    }
                </div>
                <div class="payment">
                    <div class="sum">
                        <p class="sum-label">Thành Tiền: 70000 VND</p>
                    </div>
                    <div class="pay">
                        <a href="#" class="pay-link">
                            <button class="pay-btn">Thanh Toán</button>
                        </a>
                    </div>
                </div>
            </div>
            <script src="../js/SelectShowtimes.js"></script>
</body>

</html>